manifest {
    name            = 'imputationserver2'
    version         = 'v2.0.7'
    description     = 'Genotype Imputation Server 2'
    author          = 'Lukas Forer & Sebastian SchÃ¶nherr'
    homePage        = 'https://github.com/bystrogenomics/imputationserver2'
    mainScript      = 'main.nf'
    nextflowVersion = '!>=21.04.0'
}

// Global default params, used in configs
params {
    project                = null
    project_date           = "`date`"
    files                  = null
    allele_frequency_population = null
    refpanel_yaml          = null

    mode                   = 'imputation'
    chunksize              = 20000000
    min_samples            = 20
    max_samples            = 50000
    merge_results          = true
    password               = null
    send_mail              = false

    service = [
        name    : "Imputation Server 2",
        contact : null,
        email   : null,
        url     : null,
        threads : -1
    ]

    user = [
        name  : null,
        email : null
    ]

    phasing = [
        engine : 'eagle',
        window : 5000000,
        impute : false  // Added impute parameter with default value false
    ]

    imputation = [
        enabled            : true,
        window             : 500000,
        minimac_min_ratio  : 0.00001,
        min_r2             : .8,
        meta               : false,
        md5                : false,
        create_index       : false,
        decay              : 0,
        prob_threshold     : -1,
        prob_threshold_s1  : -1,
        diff_threshold     : -1,
        min_recom          : -1
    ]

    encryption = [
        enabled : false,
        aes     : false
    ]

    ancestry = [
        enabled     : false,
        dim         : 10,
        dim_high    : 20,
        batch_size  : 50,
        reference   : null,
        max_pcs     : 8,
        k           : 10,
        threshold   : 0.75
    ]

    pgs = [
        enabled            : false,
        min_r2             : 0,
        fix_strand_flips   : false,
        category           : "all"
    ]

    pgscatalog = [
        scores : "",
        meta   : ""
    ]

}

// Load base.config by default for all pipelines
includeConfig 'conf/base.config'

profiles {
    debug {
        process.beforeScript = 'echo $HOSTNAME'
    }

    docker.enabled            = true
    singularity.enabled       = false
    process.container         = 'bystrogenomics/imputationserver2:v2.0.7'

    test {
        includeConfig 'conf/test.config'
    }

    development {
        process.container   = 'bystrogenomics/imputationserver2:latest'
        docker.enabled      = true
        resume              = true
        singularity.enabled = false
    }

    docker {
        docker.enabled      = true
        singularity.enabled = false
    }

    singularity {
        singularity.enabled = true
        singularity.autoMounts = true
        docker.enabled      = false
    }

    slurm {
        process.executor    = 'slurm'
        singularity.enabled = true
        singularity.autoMounts = true
        docker.enabled      = false
    }

    test {
        includeConfig 'conf/test.config'
    }

}
